@model CloudTrain.Models.RouteViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>RouteViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)


        @Html.HiddenFor(model => model.Name)
        @Html.HiddenFor(model => model.CoupeFare)
        @Html.HiddenFor(model => model.ReservedSeatFare)
        @Html.HiddenFor(model => model.GeneralFare)
        @Html.HiddenFor(model => model.Description)


        @Html.DropDownListFor(model => model.TrainId, ViewBag.Trains as SelectList)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
